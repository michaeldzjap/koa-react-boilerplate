{
  "name": "koa-react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate project for a Koa 2, React + Webpack 2 app",
  "scripts": {
    "start": "node -r dotenv/config ./dist/app.js",
    "watch": "node -r babel-register ./node_modules/.bin/webpack --watch --progress --hide-modules --config=webpack.config.server.development.js",
    "hot": "node -r dotenv/config server.js",
    "build": "node -r babel-register ./node_modules/.bin/webpack --config webpack.config.production.js --progress --colors",
    "prebuild": "rm -rf build",
    "postbuild": "npm run convert",
    "convert": "babel app --out-dir build",
    "deploy": "echo Ready to deploy. Commit your changes and run git push origin master",
    "predeploy": "npm run build",
    "test": "jest",
    "stats": "webpack --profile --json > stats.json"
  },
  "keywords": [
    "koa",
    "react",
    "webpack",
    "redux"
  ],
  "author": "Michael Dzjaparidze",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/michaeldzjap/koa-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/michaeldzjap/koa-react-boilerplate/issues"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-register": "^6.24.1",
    "dotenv": "^4.0.0",
    "glob-all": "^3.1.0",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.3.0",
    "koa-compress": "^2.0.0",
    "koa-static": "^4.0.1",
    "milligram": "^1.3.0",
    "normalize.css": "^7.0.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.4",
    "dotenv-webpack": "^1.5.4",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "jest-cli": "^20.0.4",
    "koa-logger": "^3.0.1",
    "koa-webpack": "^1.0.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "purify-css": "^1.2.6",
    "purifycss-webpack": "^0.7.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "redux-logger": "^3.0.6",
    "resolve-url-loader": "^2.1.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.4.1"
  }
}
