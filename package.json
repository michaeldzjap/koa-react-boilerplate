{
  "name": "koa-react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate project for a Koa 2, React + Webpack 2 app",
  "scripts": {
    "start": "node -r dotenv/config server.js",
    "watch": "nodemon -r dotenv/config --ignore app/client server.js",
    "build": "webpack --config webpack.config.production.js --progress --colors",
    "prebuild": "rm -rf build",
    "postbuild": "npm run convert",
    "convert": "babel app --out-dir build",
    "deploy": "echo Ready to deploy. Commit your changes and run git push origin master",
    "predeploy": "npm run build",
    "test": "jest",
    "stats": "webpack --profile --json > stats.json"
  },
  "keywords": [
    "koa",
    "react",
    "webpack",
    "redux"
  ],
  "author": "Michael Dzjaparidze",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/michaeldzjap/koa-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/michaeldzjap/koa-react-boilerplate/issues"
  },
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "babel-register": "^6.18.0",
    "dotenv": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.0.0-alpha.7",
    "koa-compress": "^2.0.0",
    "koa-static": "^3.0.0",
    "milligram": "^1.2.4",
    "normalize.css": "^5.0.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-dom-stream": "^0.5.1",
    "react-helmet": "^3.2.3",
    "react-redux": "^5.0.1",
    "react-router": "^4.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "clean-webpack-plugin": "^0.1.14",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "jest-cli": "^18.0.0",
    "koa-logger": "^2.0.0",
    "koa-webpack-middleware": "^1.0.3",
    "node-sass": "^4.0.0",
    "nodemon": "^1.11.0",
    "purifycss-webpack-plugin": "^2.0.3",
    "react-addons-test-utils": "^15.4.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "redux-logger": "^2.7.4",
    "resolve-url-loader": "^1.6.1",
    "sass-loader": "^4.1.0",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.28"
  }
}
